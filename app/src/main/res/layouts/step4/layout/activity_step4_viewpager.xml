<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/step4ViewpagerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="두번째 보기" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/step4ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/step4ViewpagerBtn"
        android:layout_alignParentLeft="true">

        <!-- ViewPager에 안쪽에 차일드 뷰로 들어가서 뷰 페이저의 위쪽이나 아래쪽에서 타이틀로 구분할 수 있게하거나 탭으로 구분할 수 있게 하는 방법-->
        <!-- 기존에 프래그먼트를 3개 추가했는데 추가한 거에 대한 정보를 얘가 자동으로 체크를 하게 됩니다.-->
        <androidx.viewpager.widget.PagerTitleStrip
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#55cedf"
            android:textColor="#FFFFFF"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
        </androidx.viewpager.widget.PagerTitleStrip>

<!--        <androidx.viewpager.widget.PagerTabStrip-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="top"-->
<!--            android:background="#55cedf"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:paddingTop="5dp"-->
<!--            android:paddingBottom="5dp">-->
<!--        </androidx.viewpager.widget.PagerTabStrip>-->

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>