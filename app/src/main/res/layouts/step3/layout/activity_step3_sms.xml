<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/lrn3_sms_edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="발신번호"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lrn3_sms_edit2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lrn3_sms_edit3"
        android:layout_below="@+id/lrn3_sms_edit1"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="내용"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lrn3_sms_edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lrn3_sms_btn1"
        android:layout_alignEnd="@+id/lrn3_sms_btn1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="수신시각"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/lrn3_sms_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="확인" />

</RelativeLayout>