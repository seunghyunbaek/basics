<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="한줄평 작성하기"
        android:textSize="24dp" />

    <RatingBar
        android:id="@+id/step3_comment_write_ratingbar"
        style="?android:ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.1" />

    <EditText
        android:id="@+id/step3_comment_write_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/step3_comment_write_border"
        android:gravity="top"
        android:hint="100자 이내로 작성해 주세요"
        android:maxLength="100"
        android:padding="10dp"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <Button
        android:id="@+id/step3_comment_write_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"/>



</LinearLayout>